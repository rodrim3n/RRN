<h1>{{ note.title }}</h1>
<p>{{ note.description }}</p>
<p>{{ note.date }}</p>


<a href="/notes">Back</a>

% if app.authenticated(User)
<a href="/notes/{{note.id}}/edit">Edit</a>
<form method='post' action='/notes/delete/{{note.id}}'>
  {{ app.csrf.form_tag }}
  <input type="hidden" name="_method" value="delete">
  <button type=submit>Delete</button>
</form>
% end
